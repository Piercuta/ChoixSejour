
@model ChoixSejour.Models.Sejour
@{
    Layout = "~/Views/Shared/_LayoutChoixSejour.cshtml";
}
        <h2 class="page-section-heading text-center text-uppercase text-secondary mb-0">Sejours</h2>
        <!-- Icon Divider-->
        <div class="divider-custom">
            <div class="divider-custom-line"></div>
            <div class="divider-custom-icon"><i class="fas fa-star"></i></div>
            <div class="divider-custom-line"></div>
        </div>
        <div class="row justify-content-center">
            <div class="col-lg-8 col-xl-7">
                @using (Html.BeginForm("Modifier", "Sejour", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    <div class="form-floating mb-3">
                        @Html.TextBoxFor(model => model.Lieu, new { @class = "form-control", placeholder = "Nom" })
                        @Html.LabelFor(model => model.Lieu)
                        @Html.ValidationMessageFor(model => model.Lieu)
                    </div>

                    <div class="form-floating mb-3">
                        @Html.TextBoxFor(model => model.Telephone, new { @class = "form-control", placeholder = "Téléphone" })
                        @Html.LabelFor(model => model.Telephone)
                        @Html.ValidationMessageFor(model => model.Telephone)
                    </div>

                    <div class="form-floating mb-3">
                        @Html.TextBoxFor(model => model.Ville, new { @class = "form-control", placeholder = "Ville" })
                        @Html.LabelFor(model => model.Ville)
                        @Html.ValidationMessageFor(model => model.Ville)
                    </div>

                    <div class="form-floating mb-3">
                        @Html.TextAreaFor(model => model.Description, new { @class = "form-control", placeholder = "Description" })
                        @Html.LabelFor(model => model.Description)
                        @Html.ValidationMessageFor(model => model.Description)
                    </div>

                    
                    @Html.HiddenFor(model=>model.ImagePath)
                    <div class="form-floating mb-3 d-flex">
                        <div>
                            @Html.LabelFor(model => model.Image)
                            @Html.TextBoxFor(model => model.Image, new { @class = "form-control", placeholder = "Description", @type = "file" })
                        </div>
                        <div>
                            <img src="@Model.ImagePath" height="400" width="400" />
                        </div>
                    </div>



                    <!-- Submit Button-->
                    <button class="btn btn-primary btn-xl" type="submit">Modifier</button>
                }
            </div>
        </div>